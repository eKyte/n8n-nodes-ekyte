{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./dist",
		"rootDir": "./",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"sourceMap": true,
		"lib": ["ES2020"],
		"types": ["node"]
	},
	"include": ["nodes/**/*", "credentials/**/*", "index.ts", "package.json"],
	"exclude": ["node_modules/**/*", "dist/**/*"]
}
